			pointcut-ref="handlerMethods" />
	</aop:config-->

	<tx:advice id="txAdvice" transaction-manager="txManager">
		<tx:attributes>
			<tx:method name="*" propagation="REQUIRED"
				read-only="false" />
		</tx:attributes>
	</tx:advice>

</beans>